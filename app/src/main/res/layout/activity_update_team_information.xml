    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/txt_team_name"
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_team_name"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@id/txt_team_name"
                android:layout_marginLeft="30dp"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/txt_want_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_team_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/txt_want_join"
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edit_want_join"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@id/txt_want_join"
                android:layout_marginLeft="30dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_team_member_adept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_want_join"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/txt_team_member_adept"
                android:textColor="@color/text_black"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/txt_team_member_adept"
                android:layout_marginTop="5dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"

                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="50dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="95dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="95dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="95dp"
                    android:checked="false"
                    android:text="@string/chk_html"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_team_declaration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="330dp"
                android:text="@string/txt_team_declaration"
                android:textColor="@color/text_black"
                android:textSize="16sp" />


            <EditText
                android:layout_width="300dp"
                android:layout_height="160dp"
                android:layout_below="@id/txt_team_declaration"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_input_box"
                android:padding="8dp"
                android:textSize="12sp"
                android:gravity="start"
                />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>