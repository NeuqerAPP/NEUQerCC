<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    >


    <ImageView
        android:id="@+id/mine_header_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:src="@drawable/bg_mine_title" />

    <RelativeLayout
        android:id="@+id/mine_information"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/white"
        android:layout_above="@+id/mine_phone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_man"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="92dp"
            />


        <View
            android:id="@+id/mine_dividing_one"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <View
            android:id="@+id/mine_dividing_two"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/mine_dividing_one"
            android:background="@color/black"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/mine_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_dividing_one"
            android:text="擅长方向"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />


        <TextView
            android:layout_below="@+id/mine_direction"
            android:layout_alignLeft="@+id/mine_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="前端(test)"/>


        <TextView
            android:id="@+id/mine_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_dividing_two"
            android:text="我的队伍"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_team"
            android:layout_alignLeft="@+id/mine_team"
            android:textSize="14sp"
            android:text="1(test)"/>


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mine_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@color/gray"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/mine_information"
        android:layout_marginBottom="23dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李老刘(test)"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_above="@id/mine_information"
        android:layout_toRightOf="@id/mine_avatar"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="13dp"/>

    <RelativeLayout
        android:id="@+id/mine_phone"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/mine_header_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"/>

        <ImageView
            android:id="@+id/ic_phone"
            android:layout_alignLeft="@id/ic_name"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_phone"
            android:layout_marginBottom="6dp"/>


        <TextView
            android:id="@+id/mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ic_name"
            android:text="@string/student_name"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            />

        <TextView
            android:id="@+id/mine_phonenumber"
            android:layout_toRightOf="@+id/ic_phone"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textSize="14sp"
            android:layout_marginBottom="6dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_name"
            android:layout_alignBottom="@+id/mine_name"
            android:textSize="14sp"
            android:text="李狗嗨(test)"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_phonenumber"
            android:layout_alignBottom="@+id/mine_phonenumber"
            android:textSize="14sp"
            android:text="12345678910(test)"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/mine_message"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/mine_phone"
        android:background="@color/white"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/mine_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profession"
            android:textSize="14sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/mine_grade"
            android:layout_below="@id/mine_profession"
            android:layout_alignLeft="@id/mine_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grade"
            android:textSize="14sp"

            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/mine_id"
            android:layout_below="@id/mine_grade"
            android:layout_alignLeft="@id/mine_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student_id"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_profession"
            android:layout_alignBottom="@+id/mine_profession"
            android:textSize="14sp"
            android:text="电子信息工程(test)"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_grade"
            android:layout_alignBottom="@+id/mine_grade"
            android:textSize="14sp"
            android:text="2015级(test)"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_id"
            android:layout_alignBottom="@+id/mine_id"
            android:textSize="14sp"
            android:text="20151111(test)"
            android:layout_marginLeft="10dp"/>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mine_honor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_message"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/mine_txt_honor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="荣誉墙"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>
        
        <View
            android:layout_below="@id/mine_txt_honor"
            android:layout_alignLeft="@id/mine_txt_honor"
            android:layout_width="230dp"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <GridLayout
            android:layout_below="@+id/mine_txt_honor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:rowCount="2"
            android:columnCount="3">
            



        </GridLayout>


    </RelativeLayout>


</RelativeLayout>