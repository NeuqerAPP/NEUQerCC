<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:background="@drawable/bg_account_title">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:background="@drawable/bg_account"
        android:orientation="vertical"
        android:gravity="center|top">



        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            >

                <LinearLayout

                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:background="@drawable/bg_input"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_register_phone"
                        android:layout_margin="5dp"
                        />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_phone"
                        android:hint="@string/rejester_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/gray"
                        android:paddingRight="10dp"/>
                </LinearLayout>

            <Button
                android:id="@+id/btn_get_verify_code"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_btn"
                android:text="@string/get_captcha"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_input"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_register_captch"
                android:layout_margin="5dp"
                />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_captcha"
                android:hint="@string/captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:textColor="@color/gray"
                android:layout_marginRight="5dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_input"
            android:gravity="center"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_register_password"
                android:layout_margin="5dp"
                />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_password"
                android:hint="@string/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/gray"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:inputType="textPassword"
                android:layout_marginRight="5dp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_input"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_register_password"
                android:layout_margin="5dp"
                />


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_repeat_password"
                android:hint="@string/repeat_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/gray"
                android:inputType="textPassword"
                android:layout_marginRight="5dp" />
        </LinearLayout>



        <Button
            android:id="@+id/btn_register"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_full_btn"
            android:text="@string/next"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_full_btn"
            android:text="@string/btn_return"
            android:textSize="16sp"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>